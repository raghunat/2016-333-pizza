<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.pizzatime.MainActivity">

    <!--Header Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:textAlignment="center"
        android:text="Number Of Pizzas"
        android:background="#000066"
        android:textColor="#fff"
        />


    <!--Picture Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/cheese"
            android:onClick="addCheese"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pepperoni"
            android:onClick="addPepperoni"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/sausage"
            android:onClick="addSausage"
            />
    </LinearLayout>

    <!--Counter View -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/cheese_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="36dp"
            android:textSize="36sp"
            android:textAlignment="center"
            android:text="0"    />
        <TextView
            android:id="@+id/pepperoni_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="36dp"
            android:textSize="36sp"
            android:textAlignment="center"
            android:text="0"    />
        <TextView
            android:id="@+id/sausage_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:textAlignment="center"
            android:text="0"    />
    </LinearLayout>

    <!--Order Button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Order"
        android:onClick="calculateOrder"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/order_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:textSize="36sp"
        android:textAlignment="center"
        android:text="$0"    />
</LinearLayout>
